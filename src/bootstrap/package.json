{
  "name": "hmpo-app",
  "version": "4.0.0",
  "description": "Bootstrap middleware and templating",
  "author": "HMPO",
  "license": "MIT",
  "private": false,
  "engineStrict": true,
  "engines": {
    "node": "20.x || 22.x"
  },
  "main": "index.js",
  "scripts": {
    "pretest": "npm run test:lint",
    "test": "npm run test:unit",
    "posttest": "npm audit",
    "test:lint": "eslint .",
    "test:unit": "nyc _mocha",
    "prepare": "husky"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "eslint": "^9.11.1",
    "globals": "^15.11.0",
    "hmpo-reqres": "^2.0.0",
    "husky": "^9.1.6",
    "mocha": "^10.7.3",
    "nyc": "^17.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0"
  },
  "mocha": {
    "require": "test/unit/helper",
    "spec": "test/unit/**/spec.*.js"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "example/**",
      "coverage/**",
      "test/**",
      "eslint.config.js"
    ],
    "check-coverage": true,
    "skip-full": true,
    "temp-directory": "coverage/.nyc_output",
    "reporter": [
      "text-summary",
      "text",
      "lcov"
    ],
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
